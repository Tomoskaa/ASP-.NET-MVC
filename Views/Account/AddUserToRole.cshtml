@model Av9.Models.AddToRoleModel


@{
    ViewBag.Title = "AddUserToRole";
}

<h2>Add user with this email to a role:</h2>

@using (Html.BeginForm("AddUserToRole", "Account"))
            {
                <div class="form-group">
                    @Html.LabelFor(z => z.Email)
                    @Html.TextBoxFor(m => m.Email, new { @class="form-control"})
                </div>

                <div class="form-group">
                    <!--selected role ke ni bide izbranata uloga od dropdown listata, a so selectList gi predavame site mozni ulogi-->
                    @Html.DropDownListFor(m => m.SelectedRole, new SelectList(Model.Roles), new { @class = "form-control" })
                </div>

                <button type="submit" class="btn btn-default">Save</button>
            }
